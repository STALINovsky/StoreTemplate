@model CartItem
<div class="col-12 cart-line my-3 pb-4 border-bottom">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-4 col-xl-4">
                <div class="rounded mb-3 mb-md-0">
                    <img class="img-fluid w-100" src="@Model.Product.ImagePath" alt="@Model.Product.Description">
                </div>
            </div>
            <div class="col-md-6 col-lg-8 col-xl-8">
                <div class="d-flex justify-content-between h-100">
                    <div class="d-flex flex-column justify-content-between">
                        <a class="product-name">@Model.Product.Name</a>

                        <button class="btn btn-link text-secondary cart-line-delete">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
                            </svg>
                            Delete Product
                        </button>
                    </div>

                    <div class="d-flex flex-column justify-content-between">
                        <div>
                            <div class="input-group-sm mb-0 w-100">
                                <input class="product-id" asp-for="Product.Id" hidden />
                                <input class="product-count form-control" asp-for="Quantity" min="1">
                            </div>
                            <small class="form-text text-muted text-center">
                                (Note, 1 piece)
                            </small>
                        </div>
                        <div class="pb-2 ml-auto">
                            <strong>$</strong><strong class="product-price ">@Model.Product.Price</strong>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>