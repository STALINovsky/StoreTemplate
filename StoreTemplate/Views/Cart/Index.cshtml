@{
    ViewData["TsModule"] = "ViewComponents/CartViewComponent";
}
@model IReadOnlyCollection<CartItem>

<div class="container user-cart">
    <section class="mt-5 mb-4">
        <div class="row">

            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="mb-4">Cart(<span class="user-cart-count">@Model.Count</span> items)</h5>
                        <div class="container">
                            <div class="row">
                                @foreach (var product in Model)
                                {
                                    @await Html.PartialAsync("CartItem", product)
                                }
                                <p class="text-primary mb-0">
                                    <i class="mr-1"></i> Do not delay the purchase, adding
                                    items to your cart does not mean booking them.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="mb-4">Expected shipping delivery</h5>
                        <p class="mb-0">@DateTime.Today.AddDays(14).ToString("MM/dd/yyyy")</p>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">

                        <h5 class="mb-4">We accept</h5>
                        SkyCapitals
                    </div>
                </div>
            </div>


            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">The total amount of cart</h5>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Shipping
                                <span>Gratis</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>The total amount: </strong>
                                </div>
                                <span><strong>$</strong><strong class="user-cart-price">53.98</strong></span>
                            </li>
                        </ul>

                        <a class="btn btn-primary btn-block" asp-controller="Order" asp-action="AddOrder">
                            Go to checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>