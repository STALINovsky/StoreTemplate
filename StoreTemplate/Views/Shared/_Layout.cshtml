<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Store Template</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <header>
        <a class="logo" href="~/">Store Template</a>
        <div class="container">
            <nav class="nav">
                <ul class="menu">
                    <li>
                        <a class="" href="#">
                            Categories
                        </a>
                        @await Component.InvokeAsync("Category")
                    </li>
                    <li class="active">
                        <a class="" href="#">Contacts</a>
                    </li>
                    <li>
                        <a class="" href="#">About us</a>
                    </li>
                    <li>
                        <a class="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <div class="buttons">
                    <div class="person">
                        <a href="#">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                            </svg>
                        </a>
                    </div>
                    <div class="cart">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                        </svg>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <main class="main">
        @RenderBody()
        <div class="container">
            <div class="cards">
                <div class="card">
                    <img src="~/Images/Product/Iphone.jpg" alt="img" class="card-image" />
                    <div class="card-block">
                        <h3 class="card-block__title">lorem</h3>
                        <span class="card-block__text">
                            Lorem ipsum dolor sit amet consectetur adipisicing elit. Assumenda amet adipisci porro debitis possimus numquam.
                        </span>
                        <button class="btn card-btn">Add</button>
                    </div>
                </div>
                <div class="card">
                    <img src="~/Images/Product/Iphone.jpg" alt="img" class="card-image" />
                    <div class="card-block">
                        <h3 class="card-block__title">lorem</h3>
                        <span class="card-block__text">
                            Lorem ipsum dolor sit amet consectetur adipisicing elit.
                        </span>
                        <button class="btn card-btn">Add</button>
                    </div>
                </div>
                <div class="card">
                    <img src="~/Images/Product/Iphone.jpg" alt="img" class="card-image" />
                    <div class="card-block">
                        <h3 class="card-block__title">lorem</h3>
                        <span class="card-block__text">
                            Assumenda amet adipisci porro debitis possimus numquam reprehenderit sequi illo quibusdam ab delectus.
                        </span>
                        <button class="btn card-btn">Add</button>
                    </div>
                </div>
            </div>
        </div>
        
    </main>
    <footer class="footer">
        <div class="container">
            <p>© Copyright 2014 FreebiesXpress.com</p>
        </div>
    </footer>

    @if (IsSectionDefined("Scripts"))
    {
        @await RenderSectionAsync("Scripts", required: false)
    }
    else
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/js/site.js"></script>
    }

</body>
</html>
