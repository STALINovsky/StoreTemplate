@model OrderDetails

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-6">
            <div class="card">
                <div class="card-title">
                    <div class="d-flex justify-content-center">
                        <h3>Order Details</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <form asp-controller="Order" asp-action="AddOrder" method="post">
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <div><span asp-validation-for="FirstName" class="text-danger"></span></div>
                            <input asp-for="FirstName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="SurName"></label>
                            <div><span asp-validation-for="SurName" class="text-danger"></span></div>
                            <input asp-for="SurName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber"></label>
                            <div><span asp-validation-for="PhoneNumber" class="text-danger"></span></div>
                            <input asp-for="PhoneNumber" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Country"></label>
                            <div><span asp-validation-for="Country" class="text-danger"></span></div>
                            <input asp-for="Country" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Address"></label>
                            <div><span asp-validation-for="Address" class="text-danger"></span></div>
                            <input asp-for="Address" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Comments"></label>
                            <div><span asp-validation-for="Comments" class="text-danger"></span></div>
                            <input asp-for="Comments" class="form-control">
                        </div>

                        <div class="align-content-center"></div>
                        <div class="text-center">
                            <button class="btn btn-primary align-self-xl-center" type="submit">Buy</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

