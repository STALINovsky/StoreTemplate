@model NewsViewModel

<input type="hidden" asp-for="Id" />
<div class="form-group">
    <label asp-for="Name"></label>
    <div><span class="text-danger" asp-validation-for="Name"></span></div>
    <input class="form-control" asp-for="Name" />
</div>

<div class="form-group">
    <label asp-for="Description"></label>
    <div><span class="text-danger" asp-validation-for="Description"></span></div>
    <input class="form-control" asp-for="Description" />
</div>
<div class="form-group">
    <label asp-for="Text"></label>
    <div><span class="text-danger" asp-validation-for="Text"></span></div>
    <input class="form-control" asp-for="Text" />
</div>
<div class="form-control-file">
    <label asp-for="Image"></label>
    <div class="custom-file">
        <input class="form-control custom-file-input" type="file" asp-for="Image" />
        <label class="custom-file-label">Select Image...</label>
    </div>
</div>