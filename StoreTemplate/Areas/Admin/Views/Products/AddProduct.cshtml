@model ProductViewModel


<div class="container mt-5">
    <div class="row">
        <div class="col-8 mx-auto">
            <div class="card">
                <div class="card-title">
                    <div class="d-flex justify-content-center">
                        <h5>Add product</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-danger" asp-validation-summary="All"></div>

                    <form enctype="multipart/form-data" asp-area="Admin" asp-controller="Products" asp-action="AddProduct" method="post">
                        @await Html.PartialAsync("ProductViewModelInput", Model)

                        <div class="d-flex justify-content-center mt-3">
                            <button class="btn btn-lg btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
