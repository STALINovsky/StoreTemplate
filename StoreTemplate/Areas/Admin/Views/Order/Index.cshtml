@model Order

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-8">
            <div class="card">
                <div class="card-title">
                    <div class="d-flex justify-content-center">
                        <h3>Order Details</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <form method="post">
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group">
                            <label asp-for="OrderDetails.FirstName"></label>
                            <div><span asp-validation-for="OrderDetails.FirstName" class="text-danger"></span></div>
                            <input asp-for="OrderDetails.FirstName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="OrderDetails.SurName"></label>
                            <div><span asp-validation-for="OrderDetails.SurName" class="text-danger"></span></div>
                            <input asp-for="OrderDetails.SurName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="OrderDetails.PhoneNumber"></label>
                            <div><span asp-validation-for="OrderDetails.PhoneNumber" class="text-danger"></span></div>
                            <input asp-for="OrderDetails.PhoneNumber" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="OrderDetails.Country"></label>
                            <div><span asp-validation-for="OrderDetails.Country" class="text-danger"></span></div>
                            <input asp-for="OrderDetails.Country" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="OrderDetails.Address"></label>
                            <div><span asp-validation-for="OrderDetails.Address" class="text-danger"></span></div>
                            <input asp-for="OrderDetails.Address" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="OrderDetails.Comments"></label>
                            <div><span asp-validation-for="OrderDetails.Comments" class="text-danger"></span></div>
                            <input asp-for="OrderDetails.Comments" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="CreateTime"></label>
                            <div><span asp-validation-for="CreateTime" class="text-danger"></span></div>
                            <input asp-for="CreateTime" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="text-primary" asp-for="Sum"></label>
                            <div><span asp-validation-for="Sum" class="text-danger"></span></div>
                            <input asp-for="Sum" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="text-primary" asp-for="IsActive"></label>
                            <div><span asp-validation-for="IsActive" class="text-danger"></span></div>
                            <input asp-for="IsActive" class="form-control">
                        </div>
                            
                        <div class="text-center">
                            <button class="btn btn-primary align-self-xl-center" type="submit" asp-area="Admin" asp-controller="Order" asp-action="Update">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.OrderItems)
        {
            item.Product.Description = $"Count : {item.Count}";
            @await Html.PartialAsync("AdminProductSummary", item.Product);
        }
    </div>
</div>

